nvcc -arch=$sm -lcudadevrt -lcudart -lboost_filesystem -lboost_system -lboost_program_options condShape.o patch.o cuda_util.o stats.o discrete_input_convol.o coredynamics.o -$optflag -o /root/autodl-tmp/bin/patch_fast
